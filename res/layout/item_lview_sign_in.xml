<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/bg_white_green_selected"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/loading_bg_img_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="XXXXXXXXXXXXXXXXXXXXX"
            android:textColor="@color/black1"
            android:textSize="@dimen/item_name_size" />

        <TextView
            android:id="@+id/item_tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
            android:textColor="@color/font_gray2"
            android:textSize="@dimen/item_current_price_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="x万~200万"
                android:textColor="@color/red1"
                android:textSize="@dimen/item_original_price_size" />

            <TextView
                 android:id="@+id/item_tv_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="奖励xx积分"
                android:textColor="@color/red"
                android:textSize="@dimen/item_original_price_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>