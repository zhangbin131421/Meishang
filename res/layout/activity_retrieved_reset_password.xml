<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_flayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/layout_top_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray_register"
            android:orientation="vertical" >

            <View style="@style/line_horizontal_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新密码　　"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/text_size_h4" />

                <EditText
                    android:id="@+id/etext_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="@color/font_black"
                    android:textColorHint="@color/font_gray2"
                    android:textSize="@dimen/text_size_h4" />
            </LinearLayout>

            <View
                style="@style/line_horizontal_style"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="再输一次　"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/text_size_h4" />

                <EditText
                    android:id="@+id/etext_pd_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="请确认密码"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="@color/font_black"
                    android:textColorHint="@color/font_gray2"
                    android:textSize="@dimen/text_size_h4" />
            </LinearLayout>

            <View style="@style/line_horizontal_style" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>