<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <include layout="@layout/layout_top_back" />

    <include
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/loadingview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_tab_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onclick"
            android:padding="10dp"
            android:text="积分商品"
            android:textColor="@drawable/font_black_white_selector"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tab_b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onclick"
            android:padding="10dp"
            android:text="项目"
            android:textColor="@drawable/font_black_white_selector"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tab_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onclick"
            android:padding="10dp"
            android:text="资讯"
            android:textColor="@drawable/font_black_white_selector"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flayout_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>