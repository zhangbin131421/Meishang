<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >


    <ImageView
        android:id="@+id/image_item"
        android:layout_width="83dp"
        android:layout_height="64dp"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/loading_bg_img_item" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="富安娜圣之花健康决明子枕"
            android:textColor="@color/black"
            android:textSize="@dimen/item_name_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="原价¥188"
                android:textColor="@color/black3"
                android:textSize="@dimen/item_describe_size" />

            <TextView
                android:id="@+id/tv_item_price_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="5000积分+¥18"
                android:textColor="@color/red1"
                android:textSize="@dimen/item_current_price_size" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="+"
            android:textColor="@color/black3"
            android:textSize="@dimen/item_describe_size" />

        <EditText
            android:id="@+id/tv_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="1"
            android:textColor="@color/black3"
            android:textSize="@dimen/item_describe_size" />

        <TextView
            android:id="@+id/tv_item_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="-"
            android:textColor="@color/black3"
            android:textSize="@dimen/item_current_price_size" />
    </LinearLayout>

</LinearLayout>