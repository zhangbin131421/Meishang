<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_avatar"
            style="@style/item_image_small"
            android:src="@drawable/ic_my_unlogin" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="小YY老师"
            android:textColor="@color/font_black"
            android:textSize="@dimen/text_size_h4" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ic_words" />

            <TextView
                android:id="@+id/tv_msgs_quantity"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="top|right|center"
                android:background="@drawable/tv_circle_bg_yellow"
                android:gravity="center"
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/text_size_h5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray2"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="68.66dp"
            android:layout_height="56dp"
            android:adjustViewBounds="true"
            android:src="@drawable/loading_bg_img_item" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp" >

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="富安娜圣之花健康决明子枕"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/text_size_h6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="原价¥188"
                    android:textColor="@color/font_gray2"
                    android:textSize="@dimen/text_size_h7" />

                <TextView
                    android:id="@+id/tv_item_price_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="5000积分+¥18"
                    android:textColor="@color/red1"
                    android:textSize="@dimen/text_size_h6" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>