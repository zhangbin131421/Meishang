    <style name="text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_style_oneday" parent="@style/text_style">
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="etext_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">@color/font_gray2</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="line_vertical_style">
        <item name="android:background">@color/line</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
    </style>

    <style name="line_horizontal_style">
        <item name="android:background">@color/line</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="item_image">
        <item name="android:layout_height">84dp</item>
        <item name="android:layout_width">103dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/loading_bg_img_item</item>
    </style>

    <style name="item_image_small">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/loading_bg_img_item</item>
    </style>

