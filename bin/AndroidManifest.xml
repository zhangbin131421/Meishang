            android:name=".ui.shopping.ShippingAddressActivity"
            android:screenOrientation="portrait" />
        <!-- 广告活动 -->
        <activity
            android:name=".ui.ad.AdvertisingListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ad.AdvertisingExpandbleActivity"
